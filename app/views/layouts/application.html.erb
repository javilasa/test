<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>}
      <div class="nav_item">
        <%= link_to "link 1","", class: "btn btn-default btn-warning" %>
      </div>
      <div class="nav_item">
        <%= link_to "link 2","", class: "btn btn-default btn-warning" %>
      </div>
      <% if logged_in?%>
        <div class="nav_item">
          <%= link_to "New Recipe",new_recipe_path, class: "btn btn-default btn-warning" %>
        </div>
        <ul class='nav_item'>
          <li class='dropdown'>
            <%= link_to '#', class:"btn btn-default btn-danger dropdown-toogle", "data-toggle" => "dropdown" do  %>
              <%= current_user.chefname %><b class="caret"></b>
            <% end %>
            <ul class='dropdown-menu'>
              <li><%= link_to "view Profile", chef_path(current_user)%></li>
              <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
              <li class='divider'></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        </ul>
        
      <% else %>
        
          <div class='nav_item'>
            <%= link_to "Log in", login_path, class:"btn btn-default btn-success" %>
          </div>
            
      <% end %>
    </div>
  </header>
  <div class="container">
    <%= render 'layouts/messages'%>
    <%= yield %>
    <div class ="footer">
      <p>&copy: MyRecipes 2015</p>
    </div>
  </div>

</body>
</html>
